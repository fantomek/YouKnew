<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back2">

    <ImageView
        android:id="@+id/imageView_user"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        app:layout_constraintBottom_toTopOf="@+id/qusername"
        app:layout_constraintEnd_toStartOf="@+id/qusername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/qusername"
        app:srcCompat="@mipmap/user" />

    <TextView
        android:id="@+id/qusername"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:text="用户名"
        app:layout_constraintEnd_toStartOf="@+id/button_backthelist"
        app:layout_constraintStart_toEndOf="@+id/imageView_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qtitle"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:text="问题标题"
        style="@style/InputBoxStyle"
        app:layout_constraintBottom_toTopOf="@+id/qinfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_user" />

    <TextView
        android:id="@+id/qinfo"
        android:layout_width="0dp"
        android:layout_height="309dp"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:text="问题详情"
        style="@style/InputBoxStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="26dp"
        android:text="回答问题"
        android:background="@drawable/bt_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qinfo" />

    <Button
        android:id="@+id/cur_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="已有回答"
        android:background="@drawable/bt_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qinfo" />

    <Button
        android:id="@+id/button_backthelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="返回问题列表"
        android:background="@drawable/bt_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/qusername"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="删除该条问题"
        android:background="@drawable/bt_shape"
        app:layout_constraintStart_toStartOf="@+id/button_backthelist"
        app:layout_constraintTop_toBottomOf="@+id/button_backthelist" />
</androidx.constraintlayout.widget.ConstraintLayout>